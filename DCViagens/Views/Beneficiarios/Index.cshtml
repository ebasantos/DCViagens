@model IEnumerable<DCViagens.Models.Beneficiario>

@{
    ViewBag.Title = "Cadastro de Beneficiarios";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="icon" type="image/png" href="images/icons/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/vendor/perfect-scrollbar/perfect-scrollbar.css">
<link rel="stylesheet" href="~/Content/table.css" />
<link rel="stylesheet" href="~/Content/tableUtils.css" />
<link href="~/Content/padraocss.css" rel="stylesheet" />

<script scr="~/Content/table.js"></script>

<h2>Cadastro de Beneficiarios</h2>
<hr />
<div class="form-control-sm">
    <a href="/Beneficiarios/Create">
        <button  class="btn btn-success">
            Novo
        </button>
    </a>

</div>
<br />
<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100 ver1">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <table>
                            <thead>
                                <tr class="row100 head">
                                    <th class="cell100 column1">Nome</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="row100 body">
                                    <td class="cell100 column6"> @Html.DisplayFor(modelItem => item.Nome)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="wrap-table100-nextcols js-pscroll">
                        <div class="table100-nextcols">
                            <table>
                                <thead class="tbFiltered">
                                    <tr class="row100 head">
                                        <th class="cell100 column2">Data Nascimento</th>
                                        <th class="cell100 column3">Estado Civil</th>
                                        <th class="cell100 column4">Nome da Mãe</th>
                                        <th class="cell100 column5">CPF</th>
                                        <th class="cell100 column6">Endereço</th>
                                        <th class="cell100 column4">Email</th>
                                        <th class="cell100 column2"></th>
                                        <th class="cell100 column2"></th>
                                        <th class="cell100 column2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="row100 body">
                                        <td class="cell100 column2"> @Html.DisplayFor(modelItem => item.DataNascimento)</td>
                                        <td class="cell100 column3"> @Html.DisplayFor(modelItem => item.EstadoCivil)</td>
                                        <td class="cell100 column4"> @Html.DisplayFor(modelItem => item.NomeMae)</td>
                                        <td class="cell100 column5"> @Html.DisplayFor(modelItem => item.CPF)</td>
                                        <td class="cell100 column6"> @Html.DisplayFor(modelItem => item.Endereco)</td>
                                        <td class="cell100 column4"> @Html.DisplayFor(modelItem => item.Email)</td>
                                        <td class="cell100 column2">
                                            <div class="col-md-2">
                                                <button onclick="/Cadastro/Create" class="btn btn-primary">
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                                                </button>

                                            </div>
                                        </td>
                                        <td class="cell100 column2">
                                            <div class="col-md-2">
                                                <button onclick="/Cadastro/Create" class="btn btn-primary">
                                                    @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
                                                </button>

                                            </div>
                                        </td>
                                        <td class="cell100 column2">
                                            <div class="col-md-2">
                                                <button onclick="/Cadastro/Create" class="btn btn-primary ">
                                                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                                                </button>

                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>